{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "extends": "nx/presets/npm.json",
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "outputs": ["{projectRoot}/dist", "{projectRoot}/build"],
      "cache": true
    },
    "dev": {
      "cache": false
    },
    "test": {
      "inputs": ["default", "^production", "{workspaceRoot}/vitest.workspace.yaml"],
      "outputs": ["{projectRoot}/coverage"],
      "cache": true
    },
    "lint": {
      "inputs": ["default", "{workspaceRoot}/eslint.config.js"],
      "cache": true
    },
    "type-check": {
      "inputs": ["default", "^production"],
      "cache": true
    },
    "preview": {
      "dependsOn": ["build"],
      "cache": false
    }
  },
  "namedInputs": {
    "default": [
      "{projectRoot}/**/*",
      "!{projectRoot}/**/*.test.ts",
      "!{projectRoot}/**/*.spec.ts",
      "!{projectRoot}/tests/**/*",
      "!{projectRoot}/**/__tests__/**",
      "!{projectRoot}/dist/**",
      "!{projectRoot}/build/**",
      "!{projectRoot}/coverage/**",
      "!{projectRoot}/.vite/**",
      "!{projectRoot}/node_modules/**"
    ],
    "production": [
      "default",
      "!{projectRoot}/**/*.test.ts",
      "!{projectRoot}/**/*.spec.ts",
      "!{projectRoot}/tests/**/*",
      "!{projectRoot}/**/__tests__/**",
      "!{projectRoot}/.storybook/**",
      "!{projectRoot}/**/*.stories.ts"
    ],
    "sharedGlobals": [
      "{workspaceRoot}/package.json",
      "{workspaceRoot}/pnpm-workspace.yaml",
      "{workspaceRoot}/pnpm-lock.yaml",
      "{workspaceRoot}/nx.json",
      "{workspaceRoot}/tsconfig.json"
    ]
  },
  "parallel": 5,
  "defaultBase": "main",
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "test", "lint", "type-check"]
      }
    }
  },
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "packages"
  },
  "plugins": []
}
