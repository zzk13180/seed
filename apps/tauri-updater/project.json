{
  "name": "@seed/tauri-updater",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/tauri-updater/src",
  "targets": {
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nest start --watch",
        "cwd": "apps/tauri-updater"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "options": {
        "command": "nest build",
        "cwd": "apps/tauri-updater"
      },
      "outputs": ["{projectRoot}/dist"]
    },
    "start": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "node dist/main.js",
        "cwd": "apps/tauri-updater"
      }
    }
  },
  "tags": ["type:app", "platform:node", "framework:nestjs"]
}
