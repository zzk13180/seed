# =============================================================================
# 添加导航点服务 (AddPoint.srv)
# =============================================================================
# 功能描述:
#   向点位数据库添加新的导航点位
#   支持不同类型的点位(导航点)以及自定义元数据
#
# 使用场景:
#   - 通过界面添加导航目标点
#   - 批量导入点位数据
#   - 编程方式创建导航任务点
#
# 调用示例:
#   rosservice call /seed_core/point_manager/add_point "{...}"
# =============================================================================

# ========================= 请求参数 (Request) =================================
string name                  # 点位名称 (Base64编码)
                             # 例如: "工作站1", "休息区入口"
                             # 在同一地图中必须唯一

string point_type            # 点位类型
                             # "navigation" - 导航目标点

float64 x                    # X坐标 (地图坐标系, 单位: 米)
float64 y                    # Y坐标 (地图坐标系, 单位: 米)
float64 z                    # Z坐标 (通常为0, 单位: 米)

float64 orientation_x        # 四元数X分量 (朝向)
float64 orientation_y        # 四元数Y分量 (朝向)
float64 orientation_z        # 四元数Z分量 (朝向)
float64 orientation_w        # 四元数W分量 (朝向)
                             # 四元数表示到达点位时机器人的朝向
                             # 例如: (0, 0, 0, 1) 表示朝向正X轴

string map_name              # 关联的地图名称 (Base64编码)
                             # 例如: "default", "floor1"

string description           # 点位描述 (Base64编码, 可选)
                             # 例如: "主通道入口处"

string metadata              # 元数据 (JSON字符串, 可选)
                             # 用于存储自定义属性
                             # 例如: '{"priority": 1, "zone": "A"}'

string tags                  # 标签列表 (JSON数组字符串, 可选)
                             # 例如: '["重要", "常用"]'

bool enabled                 # 是否启用
                             # true: 点位可用于导航
                             # false: 点位被禁用(保留但不使用)
---
# ========================= 响应参数 (Response) ================================
bool success                 # 操作是否成功
                             # true: 点位添加成功
                             # false: 添加失败

string message               # 返回消息 (Base64编码)
                             # 成功时: 包含点位信息
                             # 失败时: 包含具体的错误原因

int32 point_id               # 新创建的点位ID
                             # 成功时: 返回数据库中的自增ID
                             # 失败时: 返回0
