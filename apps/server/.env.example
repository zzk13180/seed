# ========================================
# NestJS Server API 环境变量模板
# ========================================
# 请复制此文件为 .env.development 或 .env.production 并修改对应的值

# 应用配置
NODE_ENV=development
PORT=3003
API_PREFIX=api

# JWT 配置 (生产环境必须修改)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-256-bits
JWT_ACCESS_TOKEN_EXPIRY=1h
JWT_REFRESH_TOKEN_EXPIRY=7d

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=your-password
DB_DATABASE=seed
DB_SYNC=true
DB_LOGGING=false

# Redis 配置 (可选)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
