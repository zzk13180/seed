{
  "name": "@seed/server",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/server/src",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "options": {
        "command": "nest build",
        "cwd": "apps/server"
      },
      "outputs": ["{projectRoot}/dist"]
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nest start --watch",
        "cwd": "apps/server"
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "node dist/main",
        "cwd": "apps/server"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "jest",
        "cwd": "apps/server"
      },
      "outputs": ["{projectRoot}/coverage"]
    },
    "test:e2e": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "jest --config ./test/jest-e2e.json",
        "cwd": "apps/server"
      }
    }
  },
  "tags": ["type:app", "platform:node", "framework:nestjs"]
}
